# key bindings (vi)
# bindkey -v
bindkey '^H' backward-delete-char
bindkey "^[[3~" delete-char
bindkey "^r" history-incremental-search-backward
bindkey "^a" vi-beginning-of-line
bindkey "^e" vi-end-of-line

autoload -U compinit
compinit
autoload colors
colors

# Use C-x C-e to edit the current command line
autoload -U edit-command-line
zle -N edit-command-line
bindkey '\C-x\C-e' edit-command-line

# prompt
ZSH_THEME_GIT_PROMPT_PREFIX=" ["
ZSH_THEME_GIT_PROMPT_SUFFIX=""
ZSH_THEME_GIT_PROMPT_BRANCH="%{$fg_bold[blue]%}"

export VIRTUAL_ENV_DISABLE_PROMPT=1
export PROMPT='%2~ $(git_super_status)%BÂ»%b '

set_right_prompt () {
  if [[ ! -z $VIRTUAL_ENV ]]; then
    RPROMPT='venv:%B$(basename $VIRTUAL_ENV)%b'
  else
    RPROMPT='%B%n%b@%m'
  fi
}

typeset -a precmd_functions
precmd_functions+=(set_right_prompt)

# syntax highlighting
ZSH_HIGHLIGHT_HIGHLIGHTERS=(main brackets pattern)

# variables
HISTFILE=~/.zhistory
HISTSIZE=10000
SAVEHIST=10000

export EDITOR=vim
export GOPATH=~/gocode/
export PATH=$PATH:~/gocode/bin/

# include all directories in ~/.bin into $PATH
PATH=$PATH:`find ~/.bin/* -maxdepth 0 -type d | xargs | sed 's/ /:/g'`

# options
setopt autocd
setopt share_history
setopt nobeep
setopt histignoredups
setopt histnostore
setopt histreduceblanks
setopt autopushd
setopt extendedglob
setopt interactivecomments
setopt automenu
setopt completeinword
setopt menucomplete

# load functions
fpath=(~/.zsh/functions ~/.zsh/additional_completions/src $fpath)
